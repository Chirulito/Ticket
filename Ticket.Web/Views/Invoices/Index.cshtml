@using Ticket.Web.Models
@model IEnumerable<Ticket.Web.Models.Invoice>

<h2>Listado de Compras</h2>

<a class="btn btn-primary mb-3" asp-action="Crear">Agregar Nueva Compra</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Evento</th>
            <th>Cantidad</th>
            <th>Asiento</th>
            <th>Método de Pago</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.EventName</td>
                <td>@item.Quantity</td>
                <td>@item.Seat</td>
                <td>@item.PaymentMethod</td>
                <td>@item.PurchaseDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Editar" asp-route-id="@item.IdInvoice">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@item.IdInvoice">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
